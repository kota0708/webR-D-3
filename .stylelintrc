{
  "plugins":[
    "stylelint-scss"
  ],
  "extends":[
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
     "indentation": 2,
     "function-calc-no-invalid": null,
    "at-rule-no-unknown": [true, {"ignoreAtRules": ["if", "else", "function", "return", "include","mixin","each"]}],
  }
}
